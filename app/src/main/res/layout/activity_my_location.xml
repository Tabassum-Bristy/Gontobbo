<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.fdbapps.gontobbo.activities.MyLocationActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome.\nYour Current Location Is:"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="18sp"
            />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <Button
            android:id="@+id/btnNearestTourismSpots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nearest Tourism Spots"/>
        <Button
            android:id="@+id/btnNearestHotels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nearest Hotels"/>
        <Button
            android:id="@+id/btnNearestHospitals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nearest Hospitals"/>
        <Button
            android:id="@+id/btnEmergencyContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency Contacts"/>

    </LinearLayout>

</ScrollView>
